<UserControl x:Class="StickyPOC.DailyTasks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StickyPOC"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             MinWidth="200"
             mc:Ignorable="d" >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0,0,0,2" Margin="4,2,4,0">
            <Grid Style="{StaticResource CaroulselGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" fa:Awesome.Content="ChevronLeft"/>

                <Grid Grid.Column="1">
                    
                </Grid>
                
                <Button Grid.Column="2" fa:Awesome.Content="ChevronRight"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
